<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >
  <!-- 插件需要连接数据库生成代码，也需要使用数据库的jar包，这里是jar包的完整地址 修改为自己仓库中的jar包位置 -->
  <classPathEntry location="C:\Users\Administrator\.m2\mhg\repository\mysql\mysql-connector-java\5.1.34\mysql-connector-java-5.1.34.jar" ></classPathEntry>
  <context id="context1" >
	<commentGenerator>
			<!-- 是否去除自动生成的注释 true：是 ： false:否 -->
			<property name="suppressAllComments" value="true" />
	</commentGenerator>
	  <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://localhost:3306/phyplatform?characterEncoding=utf-8"
                    userId="root"
                    password="k950101" />
	  <!-- 生成POJO类JavaBean的位置 -->
    <javaModelGenerator targetPackage="com.cooperation.register.pojo" targetProject="../registerpojo/src/main/java" />
	  <!-- mapper映射文件（动态SQL）生成的位置 -->
    <sqlMapGenerator targetPackage="com.cooperation.register.mapper" targetProject="../registermapper/src/main/java" />
	  <!-- mapper接口（DAO接口）生成的位置 -->
    <javaClientGenerator targetPackage="com.cooperation.register.dao" targetProject="../registerdao/src/main/java" type="XMLMAPPER" />
	  <!-- 指定数据库表 -->
       <!--供应商基础信息表-->
      <table  tableName="commercialinfo" domainObjectName="CommercialInfo"></table>
       <!--普通用户信息表-->
      <table  tableName="buyerinfo" domainObjectName="BuyerInfo"></table>

  </context>
</generatorConfiguration>